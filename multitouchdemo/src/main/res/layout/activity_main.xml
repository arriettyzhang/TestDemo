<?xml version="1.0" encoding="utf-8"?>
<com.oceawing.adaption.multitouchdemo.MyLinearlayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:id="@+id/root"
    android:gravity="center_vertical"
    >

    <TextView
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:background="#ff0000"
        android:gravity="center"
        android:text="第一个按钮"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv1_info"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#00ff00"
            />
        <TextView
            android:id="@+id/tv2_info"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#0000ff"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:background="#ffff00"
        android:gravity="center"
        android:text="第二个按钮"
        />

</com.oceawing.adaption.multitouchdemo.MyLinearlayout>